    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.1.3",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@prisma/client": "^6.5.0",
    "@types/bcrypt": "^5.0.2",
    "ali-oss": "^6.23.0",
    "bcrypt": "^5.1.1",
